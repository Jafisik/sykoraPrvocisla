<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Tendle pattern můžete upravovat, podle toho jak chcete, aby vypadal output loggeru -->
            <PatternLayout pattern="%d{HH:mm:ss:SSS} %-5level Prvocislo: %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <!-- Tady místo info dejte debug, jestli chcete vidět debug zprávy -->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>